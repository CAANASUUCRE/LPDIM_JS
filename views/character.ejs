    <div class="divInfoCharacter center">
      <div style="margin-top:25px;">
        <h3 style="display:inline;">
          <%= user.nameCharacter %>
          <span class="blue-text tooltipped" data-html="true" data-position="bottom" data-tooltip="Cela représente la moyenne de puissance de vos équipements">
            <%= user.lightCharacter %>
          </span>
        </h3>
        <i class="small material-icons blue-text">flare</i>
      </div>
      <h4><%= user.classCharacter %> / <%= user.raceCharacter %> / <%= user.genderCharacter %></h4>

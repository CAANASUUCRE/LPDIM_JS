    <div class="divWeapon">
      <div class="primaryWeapon">
        <% equipements.forEach(function(e) {
            if (e.TypeEquipment == 'Cinétique') {%>

              <img src="https://www.bungie.net<%= e.UrlImgEquipment %>"

                <% if(e.IsEquipped) { %>
                  class="iconEquipment tooltipped iconEquipmentEquipped hvr-grow-shadow"
                <% } else if(!e.IsEquipped){ %>
                  <% if(e.IDEquipment == newItem) { %>
                    class="iconEquipment tooltipped dropdown-trigger pointerDisp newItem hvr-grow-shadow"
                  <% } else {%>
                    class="iconEquipment tooltipped dropdown-trigger pointerDisp hvr-grow-shadow"
                  <% } %>
                  data-target='dropdown<%= e.HashEquipment %>'
                <% } %>

              data-html="true"
              data-position="top"
              data-tooltip=" <%= e.NameEquipment %> / <%= e.LightEquipment %> <i class='tiny material-icons'>flare</i> ">

              <% if(!e.IsEquipped) { %>

                <ul id='dropdown<%= e.HashEquipment %>' class='dropdown-content'>
                  <li><a href="/equipItem/<%= e.IDEquipment %>/<%= e.TypeEquipment %>">Equiper</a></li>
                  <li><a href="/deleteEquipment/<%= e.IDEquipment %>">Supprimer</a></li>
